---
name: blog
canonical: blog
pageable: true
per_page: 5
title: Blog - SEOCharles
---

<%= partial 'partials/blog-intro' %>

<section id="page-content" class="blog">
        <div class="page-center fl-elems">
            <script type="text/javascript">
    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
    var disqus_shortname = 'charlesmpiche'; // required: replace example with your forum shortname

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function () {
        var s = document.createElement('script'); s.async = true;
        s.type = 'text/javascript';
        s.src = 'http://' + disqus_shortname + '.disqus.com/count.js';
        (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
    } ());
        </script>
	<div id="posts-list">
    	<ul>
            <% page_articles.each_with_index do |article, i| %>
            <li>
                <h2><%= link_to article.title, article %></h2>
                <p class="post-infos">By <span class="author"><%= article.data.author %></span> on <span class="date"><%= article.date.strftime('%b %e %Y') %></span></p>
                <div class="summary"><p><%= article.data.intro %></p></div>
                <p class="tags">Category: 
                <%= link_to "#{article.data.category}", category_path(article.data.category 'blog') %>
                </p>
                <p class="posts-actions"><a href="<%= article.url %>">Read more</a> <a href="<%= article.url %>#disqus_thread" class="comments"></a></p>
            </li>
            <% end %>
		</ul>
        <% if paginate %>
            <p class="box-buttons fl-elems" id="bottom-buttons">
            <% if prev_page %>
            <%= link_to 'Previous page', prev_page, { :class=>"left" } %>
            <% end %>
            <% if next_page %>
            <%= link_to 'Next page', next_page, { :class=>"right" } %></p>
            <% end %>
        <% end %>
	</div>
<%= partial 'partials/blog-sidebar' %>
</div>
</section>




